{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "react-jsx", // https://www.typescriptlang.org/tsconfig#jsx
    "module": "None", // https://www.typescriptlang.org/tsconfig#module
    "moduleResolution": "node",
    "outDir": "./dist",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@src/*": ["./src/*"]
    },
    "strict": true,
    "target": "esnext"
  }
}
